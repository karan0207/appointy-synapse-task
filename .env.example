# Database
DATABASE_URL="postgresql://synapse:synapse_dev_password@localhost:5432/synapse_db"

# Redis
REDIS_URL="redis://localhost:6379"

# Server
PORT=3001
NODE_ENV=development

# Client
VITE_API_URL=http://localhost:3001

# OpenAI (for LLM and embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# OCR Configuration
# Language code for Tesseract OCR (default: eng)
# Common options: eng (English), spa (Spanish), fra (French), deu (German),
# chi_sim (Simplified Chinese), chi_tra (Traditional Chinese), jpn (Japanese), ara (Arabic)
# For multiple languages, use + separator: eng+spa
OCR_LANGUAGE=eng

# S3 / Object Storage (AWS S3 or Cloudflare R2)
S3_ENDPOINT=
S3_REGION=us-east-1
S3_BUCKET_NAME=synapse-uploads
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Vector Database (Qdrant example)
VECTOR_DB_URL=http://localhost:6333
VECTOR_DB_API_KEY=


